<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dip"
    android:paddingRight="18dip"
    >

   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:padding="18dip"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/common_progress_dialog_bg"
        >
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
            
            <ProgressBar 
                android:id="@+id/common_progress_bar_dialog_progress"
	            style="@style/common_progress_bar"
	            android:layout_width="match_parent"
	            android:layout_height="14dip"
	            />
            
        </RelativeLayout>
        
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dip"
            >
            
            <TextView
	            android:id="@+id/common_progress_bar_dialog_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:text="正在同步客户网..."
	            android:textSize="16sp"
	            android:textColor="@color/gray"
	            android:maxLines="1"
            	android:maxEms="10"
        		/>
            
            <TextView
	            android:id="@+id/common_progress_bar_dialog_progress_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dip"
	            android:gravity="center"
	            android:textSize="16sp"
	            android:textColor="@color/gray"
        		/>
            
            <TextView
	            android:id="@+id/common_progress_bar_dialog_progress_percent"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="50%"
	            android:textSize="16sp"
	            android:textColor="@color/gray"
	            android:layout_marginLeft="10dip"
	            android:visibility="gone"
        		/>
        </LinearLayout>
        
        
    </LinearLayout>
    

</RelativeLayout>