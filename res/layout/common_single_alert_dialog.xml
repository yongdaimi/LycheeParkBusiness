<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:background="@drawable/common_alert_dialog_bg"
        android:orientation="vertical" 
        >

        <TextView
            android:id="@+id/common_alert_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:gravity="center"
            android:text="@string/tip"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/common_alert_dialog_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="14dip"
            android:paddingBottom="14dip"
            android:textColor="@color/gray"
            android:textSize="16sp" 
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="16dip"
            android:background="@drawable/divider" />

        <LinearLayout
            android:id="@+id/common_alert_dialog_button"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/common_alert_dialog_cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/common_alert_dialog_confirm_button"
                android:text="@string/confirm"
                android:textColor="#619df2"
                android:textSize="17sp" />
              
        </LinearLayout>
    </LinearLayout>

</LinearLayout>